@using Entities
@using Business
@rendermode InteractiveServer

<div>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Referencia</th>
                <th>Nombre de la Bodega</th>
                <th>Direccion de la Bodega</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var wareh in wareHouseList)
            {
                <tr>
                    <td>@wareh.WareHouseId</td>
                    <td>@wareh.WareHouseName</td>
                    <td>@wareh.WareHouseAddress</td>
                    <td><a href="warehouse/update/@wareh.WareHouseId" class="text-decoration-none text-primary fw-bolder">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<WareHouseEntity> wareHouseList = new();

    protected override async Task OnInitializedAsync()
    {
        wareHouseList = await B_WareHouse.WareHousesList();
    }

}
